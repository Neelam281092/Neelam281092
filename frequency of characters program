package Automation;
import java.util.Scanner;

	public class Frequencyofchar {
		
		void freqOfChar(String userInput, char freqofchar) {
			int count = 0;
			for(int i = 0; i < userInput.length(); i++) {
				if(userInput.charAt(i) == freqofchar) {
					count++;
				}
			}
			System.out.println("Frequency of " + freqofchar + " char is : " + count);
		}
		
		public static void main(String[] args) {
			Frequencyofchar fc = new Frequencyofchar();
			Scanner scanner = new Scanner(System.in);
			System.out.println("Please enter text: ");
			String input = scanner.nextLine();
			input= input.toUpperCase();
			System.out.println("Please enter character for freqency: ");
			char ch = scanner.next().charAt(0);
			ch = Character.toUpperCase(ch);
			fc.freqOfChar(input, ch);
		}
	}
